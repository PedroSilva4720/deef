{
  "openapi": "3.0.0",
  "info": {
    "title": "@deef/api",
    "description": "Swagger documentation for deef api",
    "contact": {
      "name": "Andoras",
      "email": "pedro@andoras.com.br"
    },
    "version": "1.0.0"
  },
  "paths": {
    "/company": {
      "post": {
        "tags": ["company"],
        "description": "Create a company",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "companyName": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "created"
          },
          "401": {
            "description": "Empresa já existente"
          },
          "501": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/user/{companyId}": {
      "post": {
        "description": "Create User",
        "tags": ["user"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "parameters": [
          {
            "name": "companyId",
            "required": true,
            "in": "query",
            "schema": {
              "type": "string"
            },
            "description": "The company ID"
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "401": {
            "description": "Usuário já existente"
          },
          "501": {
            "description": "Internal Server Error"
          }
        }
      }
    },

    "/user/name": {
      "patch": {
        "tags": ["user"],
        "description": "Update user's name",
        "security": [
          {
            "BasicAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "newUserName": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {}
      }
    },
    "/user/password": {
      "patch": {
        "tags": ["user"],
        "description": "update user's password",
        "security": [
          {
            "BasicAuth": []
          }
        ],
        "responses": {}
      }
    },
    "/user": {
      "delete": {
        "tags": ["user"],
        "description": "Delete user",
        "security": [
          {
            "BasicAuth": []
          }
        ],
        "responses": {}
      }
    }
  },
  "servers": [{ "url": "http://localhost:9001", "description": "Dev server" }],
  "components": {
    "securitySchemes": {
      "BasicAuth": {
        "type": "http",
        "scheme": "basic"
      }
    }
  }
}
